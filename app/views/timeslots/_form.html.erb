<div class="row">
  <fieldset>
    <%= simple_form_for @timeslot do |f| %>
        <div class="large-3 columns":>
          <label>Select Date</label>
          <input name="timeslot_date" id="datepicker"></input>
          <%= f.label :start_time %>
          <%= f.text_field :start_time, class: "pick-time" %>
          <%= f.label :end_time %>
          <%= f.text_field :end_time, class: "pick-time" %>
          <div id="assets-list" class="large-block-grid-2">
            <% StudioAsset.all.each do |asset| %>
              <li>
                <%= check_box_tag "timeslot[studio_asset_ids][]", asset.id %>
                <%= label_tag dom_id(asset), asset.name, "data-cost" => asset.base_cost %>
              </li>
            <% end %>
          </div>
          <h4 class="subheader">Cost Estimate: $<span id="cost_estimate"></span></h4>
          <%= f.input :notes %>
          <%= f.input :other %>
          <%= f.submit :class => [:medium, :secondary, :button] %>
        </div>
        <div class="large-8 push-1 columns">
          <div id="calendar"></div>
        </div>
    <% end %>
  </fieldset>
</div>

