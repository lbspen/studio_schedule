<div class="row">
  <fieldset>
    <%= form_for @timeslot, :html => {:class => "custom"} do |f| %>
        <div class="large-3 columns":>
          <%= f.label :timeslot_date %>
          <%= f.text_field :timeslot_date, id: "datepicker" %>
          <%= f.label :start_time %>
          <%= f.text_field :start_time, class: "pick-time" %>
          <%= f.label :end_time %>
          <%= f.text_field :end_time, class: "pick-time" %>
          <%= f.submit :class => [:medium, :secondary, :button] %>
        </div>
        <div class="large-8 push-1 columns">
          <div id="calendar"></div>
        </div>
    <% end %>
  </fieldset>
</div>

