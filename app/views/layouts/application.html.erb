<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8" />

  <!-- Uncomment to make IE8 render like IE7 -->
  <!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title><%= content_for?(:title) ? yield(:title) : "Studio Schedule" %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= csrf_meta_tags %>
</head>

<body>


  <nav class="top-bar">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name">
        <h1><a href="#">Welcome to Studio Scheduler</a></h1>
      </li>
      <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    </ul>

    <section class="top-bar-section">
      <!-- Left Nav Section -->
      <ul class="left">
        <li class="divider"></li>
        <li class="divider"></li>
      </ul>

      <!-- Right Nav Section -->
      <ul class="right">
        <li class="divider hide-for-small"></li>
        <% if current_user %>
          <li><a>Signed in as <%= current_user.email %></a></li>
          <li class="divider hide-for-small"></li>
          <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
          <li class="divider hide-for-small"></li>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
        <% end %>
      </ul>
    </section>
  </nav>


  <div class="row">
    <div class="large-12 columns">
      <header>
        <h1>SOPHIAHAT STUDIOS</h1>
      </header>
      <div id="menu">
        <ul>
          <li><a href="http://www.sophiahatstudio.com/index.html">Home</a></li>
          <li><a href="http://www.sophiahatstudio.com/aboutus.html">About Us</a></li>
          <li><a href="http://www.sophiahatstudio.com/services.html">Services</a></li>
          <li><a href="http://www.sophiahatstudio.com/layout.html">Layout</a></li>
          <li><a href="http://www.sophiahatstudio.com/gear.html">Gear</a></li>
          <li><a href="http://www.sophiahatstudio.com/mp3player/sounds4.html">Music</a></li>
          <li><a href="http://www.sophiahatstudio.com/sound_design.html">Sound Design</a></li>
          <li><a href="http://www.sophiahatstudio.com/rates.html">Rates</a></li>
          <li><a href="http://www.sophiahatstudio.com/clients.html">Clients</a></li>
          <li><a href="http://www.sophiahatstudio.com/resources.html">Resources</a></li>
          <li><a href="http://www.sophiahatstudio.com/contact.html">Contact/Booking</a></li>
        </ul>
      </div>
      <% flash.each do |key, value| %>
        <div class='flash alert-box' id='<%= key %>'>
          <%= value %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>


  <%= javascript_include_tag "application" %>
</body>
</html>
