<h2>Clients</h2>
<%= link_to "New Client", new_client_path %>
<div class="row">
  <div class="large-8 columns panel callout">
    <h3>Name</h3>
    <% @clients.each do |client| %>
    <div class="row">
      <div class="large-6 columns panel collapse">
        <%= client.first_name %> <%= client.last_name %>
      </div>
      <div class="large-2 columns panel collapse">
        <%= link_to "View", client_path(client) %>
      </div>
      <div class="large-2 columns panel collapse">
        <%= link_to "Edit", edit_client_path(client) %>
      </div>
      <div class="large-2 columns panel collapse">
        <%= link_to "Delete", client_path(client), :method => "delete", :confirm => "Are you sure you want to delete?" %>
      </div>
    </div>
    <% end %>
  </div>
  <div class="large-4 columns"></div>
</div>
